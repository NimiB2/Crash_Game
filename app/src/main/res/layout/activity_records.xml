                android:textSize="@dimen/record_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_score8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_record_margin"
                android:gravity="start"
                android:text="@string/score_title"
                android:textColor="@color/black"
                android:textSize="@dimen/record_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_score9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_record_margin"
                android:gravity="start"
                android:text="@string/score_title"
                android:textColor="@color/black"
                android:textSize="@dimen/record_size" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/record_FRAME_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_BTN_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/orange_300"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginHorizontal="100dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:text="Main"
            />



    </FrameLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordsActivity">

    <FrameLayout
        android:id="@+id/record_FRAME_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/elevation_and_padding">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/list_IMG_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5" />


    </FrameLayout>
<!--    MARK: MAP_FRAME-->
    <FrameLayout
        android:id="@+id/record_FRAME_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/elevation_and_padding">

    </FrameLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/map_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange_300"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/small_margin_default"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:text="@string/main"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
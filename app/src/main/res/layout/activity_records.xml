                android:textSize="@dimen/record_size" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/record_Layout_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/general_size_and_margin"
            android:layout_marginEnd="@dimen/title_margin"
            android:gravity="end"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_score0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_record_margin"
                android:gravity="start"
                android:text="@string/score_title"
                android:textColor="@color/black"
                android:textSize="@dimen/record_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_score1"

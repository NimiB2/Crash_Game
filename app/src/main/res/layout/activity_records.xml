<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordsActivity">

    <FrameLayout
        android:id="@+id/record_FRAME_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/list_IMG_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/record_MTV_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TOP RECORDS"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/record_Layout_Player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/title_margin"
            android:layout_marginTop="@dimen/general_size_and_margin"
            android:gravity="start"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_title"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_player0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_record_margin"
                android:text="@string/player_title"
                android:textColor="@color/black"
                android:textSize="@dimen/record_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/player_record_margin"
                android:text="@string/player_title"
                android:textColor="@color/black"
                android:textSize="@dimen/record_size" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_MTV_player2"

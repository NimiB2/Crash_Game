<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/player_MTV_index"
        android:layout_width="@dimen/big_margin_default"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_default"
        android:text="1."
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/player_MTV_name"
        android:layout_width="@dimen/main_frame_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_default"
        android:layout_marginTop="@dimen/small_margin_default"
        android:layout_toEndOf="@id/player_MTV_index"
        android:maxLines="2"
        android:minLines="2"
        android:text="@string/name_edit"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/player_MTV_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_default"
        android:layout_marginTop="@dimen/small_margin_default"
        android:layout_toEndOf="@id/player_MTV_name"
        android:text="@string/score_title"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/player_IMG_playerMap"
        android:layout_width="@dimen/big_margin_default"
        android:layout_height="@dimen/big_margin_default"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/map" />
</RelativeLayout>